<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">


    <bean class="com.google.gson.Gson"/>

    <bean class="common.LoggedAnnotationPostProcessor"/>

    <bean id="dashboardService" class="services.impl.DashboardServiceImpl"/>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="dashboardService"/>
        <property name="serviceName" value="dashboardService"/>
        <property name="serviceInterface" value="services._interfaces.DashboardService"/>
        <property name="registryPort" value="65000"/>
    </bean>

    <bean id="exerciseDataService" class="services.impl.ExerciseDataServiceImpl"/>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="exerciseDataService"/>
        <property name="serviceName" value="exerciseDataService"/>
        <property name="serviceInterface" value="services._interfaces.ExerciseDataService"/>
        <property name="registryPort" value="64999"/>
    </bean>

    <bean id="exerciseService" class="services.impl.ExerciseServiceImpl"/>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="exerciseService"/>
        <property name="serviceName" value="exerciseService"/>
        <property name="serviceInterface" value="services._interfaces.ExerciseService"/>
        <property name="registryPort" value="64998"/>
    </bean>

    <bean id="registerService" class="services.impl.RegisterServiceImpl"/>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="registerService"/>
        <property name="serviceName" value="registerService"/>
        <property name="serviceInterface" value="services._interfaces.RegisterService"/>
        <property name="registryPort" value="64997"/>
    </bean>

    <bean id="sexListService" class="services.impl.SexListServiceImpl"/>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="sexListService"/>
        <property name="serviceName" value="sexListService"/>
        <property name="serviceInterface" value="services._interfaces.SexListService"/>
        <property name="registryPort" value="64996"/>
    </bean>

    <bean id="trainingService" class="services.impl.TrainingServiceImpl"/>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="trainingService"/>
        <property name="serviceName" value="trainingService"/>
        <property name="serviceInterface" value="services._interfaces.TrainingService"/>
        <property name="registryPort" value="64995"/>
    </bean>

    <bean id="userService" class="services.impl.UserServiceImpl"/>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="userService"/>
        <property name="serviceName" value="userService"/>
        <property name="serviceInterface" value="services._interfaces.UserService"/>
        <property name="registryPort" value="64994"/>
    </bean>

</beans>