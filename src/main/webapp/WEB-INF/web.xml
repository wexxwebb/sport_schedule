<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <display-name>Autentication</display-name>

    <servlet>
        <servlet-name>Autentication</servlet-name>
        <servlet-class>servlets.Autentication</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Autentication</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExerciseAjax</servlet-name>
        <servlet-class>servlets.ExerciseAjax</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExerciseAjax</servlet-name>
        <url-pattern>/getExerciseDataList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>controllers.DashboardController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/inner/page</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>controllers.filters.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/inner/*</url-pattern>
    </filter-mapping>

</web-app>